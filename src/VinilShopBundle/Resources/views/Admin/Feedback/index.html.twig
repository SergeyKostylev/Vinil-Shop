{% extends '@VinilShop/admin_layout.html.twig' %}


{% block body %}

    <div class="pagination justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

    <table class="table table-striped">
        <thead class="table-active">
        <tr>
            <th scope="col" style="width: 5%;">{{ knp_pagination_sortable(pagination, 'Статус', 'is_active') }}</th>
            <th scope="col" style="width: 20%;">{{ knp_pagination_sortable(pagination, 'E-mail', 'email') }}</th>
            <th scope="col" style="width: 20%;">Заголовок</td>
            <th scope="col" style="width: 45%;">Сooбщение</th>
            <th scope="col" style="width: 10%;"></th>
        </tr>
        </thead>
        <tbody>

        {% for feedback in pagination %}

            <tr>
                <td  onclick="window.location.href='{{ path('admin_feedback_show', {id : feedback.id}) }}'; return false" class="text-center">
                    {% if not feedback.isActive  %}
                        <i class="far font-15pt fa-envelope-open"></i>
                    {% else %}
                        <i class="far font-15pt text-info fa-envelope"></i>
                    {% endif %}</td>
                <td onclick="window.location.href='{{ path('admin_feedback_show', {id : feedback.id}) }}'; return false">{{ feedback.email }}</td>
                <td onclick="window.location.href='{{ path('admin_feedback_show', {id : feedback.id}) }}'; return false">{{ feedback.title|slice(0,20) }}{% if feedback.title|length >20 %}...{% endif %}</td>
                <td onclick="window.location.href='{{ path('admin_feedback_show', {id : feedback.id}) }}'; return false">{{ feedback.message|slice(0,55) }}{% if feedback.message|length >55 %}...{% endif %}</td>
                <td>
                    <span class="feedback-id" data-feedback-id="{{ feedback.id }}"></span>
                    <button type="button" class="feedback-delete-btn btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </button>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>





{% endblock %}


